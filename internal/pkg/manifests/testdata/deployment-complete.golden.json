{
  "kind": "Deployment",
  "apiVersion": "apps/v1",
  "metadata": {
    "name": "thanos-query",
    "namespace": "monitoring",
    "creationTimestamp": null
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "thanos-query"
      }
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "thanos-query"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "config",
            "configMap": {
              "name": "thanos-query-config"
            }
          }
        ],
        "containers": [
          {
            "name": "thanos",
            "image": "quay.io/thanos/thanos:v0.38.0",
            "args": [
              "query",
              "--log.level=info"
            ],
            "ports": [
              {
                "name": "http",
                "containerPort": 10902,
                "protocol": "TCP"
              },
              {
                "name": "grpc",
                "containerPort": 10901,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "THANOS_LOG_FORMAT",
                "value": "json"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "1",
                "memory": "1Gi"
              },
              "requests": {
                "cpu": "500m",
                "memory": "512Mi"
              }
            },
            "volumeMounts": [
              {
                "name": "config",
                "mountPath": "/etc/thanos"
              }
            ]
          },
          {
            "name": "sidecar",
            "image": "sidecar:latest",
            "args": [
              "--verbose"
            ],
            "resources": {}
          }
        ],
        "nodeSelector": {
          "disktype": "ssd"
        },
        "affinity": {
          "nodeAffinity": {
            "requiredDuringSchedulingIgnoredDuringExecution": {
              "nodeSelectorTerms": [
                {
                  "matchExpressions": [
                    {
                      "key": "kubernetes.io/e2e-az-name",
                      "operator": "In",
                      "values": [
                        "e2e-az1",
                        "e2e-az2"
                      ]
                    }
                  ]
                }
              ]
            }
          }
        },
        "tolerations": [
          {
            "key": "example-key",
            "operator": "Exists",
            "effect": "NoSchedule"
          }
        ]
      }
    },
    "strategy": {}
  },
  "status": {}
}
